{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@ngrx/data": [
        "../platform/modules/data"
      ],
      "@ngrx/data/*": [
        "../platform/modules/data/*"
      ],
      "@ngrx/effects": [
        "../platform/modules/effects"
      ],
      "@ngrx/effects/*": [
        "../platform/modules/effects/*"
      ],
      "@ngrx/entity": [
        "../platform/modules/entity"
      ],
      "@ngrx/entity/*": [
        "../platform/modules/entity/*"
      ],
      "@ngrx/router-store": [
        "../platform/modules/router-store"
      ],
      "@ngrx/router-store/*": [
        "../platform/modules/router-store/*"
      ],
      "@ngrx/store": [
        "../platform/modules/store"
      ],
      "@ngrx/store/*": [
        "../platform/modules/store/*"
      ],
      "@ngrx/store-devtools": [
        "../platform/modules/store-devtools"
      ],
      "@ngrx/store-devtools/*": [
        "../platform/modules/store-devtools/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}